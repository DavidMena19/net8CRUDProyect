@model net8Proyect.Models.Slider

@{
    ViewData["Title"] = "Editar imagen del Slider de la pagina Principal";
}

<br />
<br />

<h3 class="text-center">Editar Slider</h3>

<form method="post" asp-action="Edit" enctype="multipart/form-data">

    <input type="hidden" asp-for="id" />

    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre del slider" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="Estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" class="form-control" name="archivos" id="subidaArchivo" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group-row">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>

        <div class="col-4 pt-3">
            <img src="@Model.UrlImagen" width="300px" style="border-radius:5px; border:1px solid black" />
        </div>

    </div>
</form>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}