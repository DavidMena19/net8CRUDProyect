@model net8Proyect.Models.ViewModels.CarritoVM
@{
    ViewData["Title"] = "Carrito de compras";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Carrito de compras</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary"><i class="fas fa-plus"></i> Agregar otro Articulo a la compra</a>
        </div>
    </div>
    <br />

    <table id="tblCarrito" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Cantidad</th>
                <th>Precio Unidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody></tbody> <!-- DataTable llenará los datos aquí -->
    </table>
</div>

@section Scripts {
    <script src="~/js/carrito.js"></script>
}
