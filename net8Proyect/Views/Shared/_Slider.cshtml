@model net8Proyect.Models.ViewModels.HomeVM


<!--Slider-->
<div id="sliderImagenes" class="carousel slide" ">
    <div class="carousel-indicators">
        @{
            for(int i = 0; i < Model.Sliders.Count(); i++)
            {
                <button type="button" data-bs-target="#sliderImagenes" data-bs-slide-to="@i"
                        class="@(i == 0 ? "active" : "")"
                        aria-current="@(i == 0 ? "true" : "false")"
                        aria-label="Slide @i"></button>
            }

         }

    </div>
    <div class="carousel-inner">

        @{
            int cont = 0;

            foreach(var i in Model.Sliders)
            {
                var itemDinamico = cont ++ == 0? "active" : "";

                @if (i.Estado == true)
                {
                    <div class="carousel-item @itemDinamico">
                        <img src="@Url.Content(i.UrlImagen)" class="d-block w-100">
                        <h1 class="text-white text-center bg-black py-1">@Html.Raw(i.Nombre)</h1>
                    </div>

                }
            }
        }


    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#sliderImagenes" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#sliderImagenes" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!--Slider-->